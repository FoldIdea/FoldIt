{{#contentFor "scripts"}}
    <script type="text/javascript" src="/lib/typeahead.js/dist/typeahead.bundle.js"></script>
{{/contentFor}}
<div class="noprint">
    <a class="home" href="/">Home</a>
    <h1>Create Tray</h1>
</div>
<form>
    <fieldset class="form-group">
        <b>For</b>:
        <label class="radio-inline">
            <input type="radio" name="for" value="screen" id="for-screen" checked/> Screen
        </label>
        <label class="radio-inline">
            <input type="radio" name="for" value="printer" id="for-printer"/> Printer
        </label>
        &nbsp;
        <input id="loadname" name="loadname" type="text" class="form-control form-control-sm typeahead" placeholder="load base"/>
        <button id="load" class="btn btn-sm btn-primary" type="button">Load</button>
        <span id="load-result" style="display:none;"></span>
    </fieldset>
</form>
<form>
    <fieldset class="form-group">
        <b>Base</b>:
        <input name="bw" type="number" min="1" max="12" step="0.1" value="1"/>
        x
        <input name="bh" type="number" min="1" max="12" step="0.1" value="1"/>
        pad:
        <input name="pad" type="number" min="0.1" max="12" step="0.1" value="0.2"/>
        <label class="radio-inline">
            <input type="radio" name="units" value="cm" id="units-cm" checked>cm
        </label>
        <label class="radio-inline">
            <input type="radio" name="units" value="in" id="units-in">inches
        </label>
        &nbsp;
        <b>Ranks</b>:
        <input name="front" type="number" min="1" max="12" value="1"/>
        x
        <input name="ranks" type="number" min="1" max="12" value="1"/>
        <br/>
        <b>Description:</b>
        <input name="desc" type="text" maxlength="25" value="" placeholder="tray descriptor">
        &nbsp;
        <b>Duplicates:</b>
        <input name="dups" type="number" min="1" max="5" value="1"/>
        &nbsp;
        <input name="rot90" type="checkbox" id="rot90" value="true"/>
        <label for="rot90"> Rotate 90&deg</label>
        <br/>
    </fieldset>
</form>
<div class="page">
</div>
<script src="/javascripts/tray.js"></script>

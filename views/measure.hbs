<a class="home" href="/">Home</a>
<h1>Measure</h1>
<form>
    <fieldset class="form-group">
        <b>For</b>:
        <label class="radio-inline">
            <input type="radio" name="for" value="screen" id="for-screen" checked/> Screen
        </label>
        <label class="radio-inline">
            <input type="radio" name="for" value="printer" id="for-printer"/> Printer
        </label>
        &nbsp;
        <b>Units</b>:
        <label class="radio-inline">
            <input type="radio" name="units" value="cm" id="units-cm" checked/> cm
        </label>
        <label class="radio-inline">
            <input type="radio" name="units" value="in" id="units-in"/> inches
        </label>
    </fieldset>
</form>
<form>
    <fieldset class="form-group">
        <b>Save as:</b>
        <input id="name" type="text" maxlength="20" placeholder="name"/>
        &nbsp;
        Width:
        <input id="width" name="width" class="units" type="number" value="0" min="0" max="20" step="0.1"/>
        <span class="units">cm</span>
        &nbsp;
        Height:
        <input id="height" name="height" class="units" type="number" value="0" min="0" max="20" step="0.1"/>
        <span class="units">cm</span>
        &nbsp;
        <button id="save" class="btn btn-primary btn-sm">Save</button>
        <div id="save-result" style="display:none;"></div>
    </fieldset>
</form>
<div class="page">
    <svg id="grid-cm" width="14cm" height="14cm" viewBox="0 0 140 140"
         style="fill:rgb(255,255,255);stroke-width:0.25;stroke:rgb(0,0,0);">
    </svg>
    <svg id="grid-in" width="5in" height="5in" viewBox="0 0 96 96"
         style="display:none;fill:rgb(255,255,255);stroke-width:0.25;stroke:rgb(0,0,0);">
    </svg>
</div>
<script src="/javascripts/measure.js"></script>
